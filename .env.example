# Docker environment variables
# Copy this file to .env and customize for your environment

# Required: OpenAI API Key
OPENAI_API_KEY=your-openai-api-key-here

# Optional: Quality thresholds for different environments
QUALITY_THRESHOLD=75
DEV_QUALITY_THRESHOLD=60
QA_QUALITY_THRESHOLD=70
PROD_QUALITY_THRESHOLD=85

# Optional: Directory mappings
SOURCE_DIR=./src
REPORTS_DIR=./reports
LOGS_DIR=./logs

# Optional: Java memory settings
JAVA_OPTS=-Xmx1g -Xms512m

# Optional: Docker image settings
IMAGE_TAG=latest
CONTAINER_PREFIX=code-guard
